@model L2_DAVH_AFPE.Models.PharmacyModel
@using L2_DAVH_AFPE.Models.Data
@{
    ViewData["Title"] = "DrugOrder";
}

<h1>DrugOrder</h1>
@if (TempData["testmsg"] != null)
{
    <script type="text/javascript">
       alert("@TempData["testmsg"]");
    </script>
}
<h4>PharmacyModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DrugOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-xl-left">Stock: @Html.DisplayFor(model => Singleton.Instance.inventory.Get(Singleton.Instance.guide.Find(new Drug { name = model.Name, numberline = 0 }).numberline).Quantity)</label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"  />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Production_Factory" class="control-label"></label>
                <input asp-for="Production_Factory" class="form-control"  />
                <span asp-validation-for="Production_Factory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"  />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control"  />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



